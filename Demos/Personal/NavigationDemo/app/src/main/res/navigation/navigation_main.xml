<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation_main"
            app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/homeFragment" android:name="ubb.license.david.navigationdemo.HomeFragment"
              android:label="fragment_home" tools:layout="@layout/fragment_home">
        <action android:id="@+id/next_destination" app:destination="@id/configFragment"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
    <fragment android:id="@+id/configFragment" android:name="ubb.license.david.navigationdemo.ConfigFragment"
              android:label="fragment_config" tools:layout="@layout/fragment_config">
        <action android:id="@+id/prev_destination" app:destination="@id/homeFragment"/>
        <action android:id="@+id/next_destination" app:destination="@id/navigationFragment"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
    <fragment android:id="@+id/cameraFragment" android:name="ubb.license.david.navigationdemo.CameraFragment"
              android:label="fragment_camera" tools:layout="@layout/fragment_camera">
        <action android:id="@+id/next_destination" app:destination="@id/homeFragment"
                app:enterAnim="@anim/nav_default_exit_anim" app:exitAnim="@anim/nav_default_enter_anim"/>
    </fragment>
    <fragment android:id="@+id/navigationFragment" android:name="ubb.license.david.navigationdemo.NavigationFragment"
              android:label="fragment_navigation" tools:layout="@layout/fragment_navigation">
        <action android:id="@+id/prev_destination" app:destination="@id/configFragment"
                app:enterAnim="@anim/nav_default_exit_anim" app:exitAnim="@anim/nav_default_enter_anim"/>
        <action android:id="@+id/next_destination" app:destination="@id/cameraFragment"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
</navigation>