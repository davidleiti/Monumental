<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_home"
            app:startDestination="@id/startDestination">

    <fragment
            android:id="@+id/startDestination"
            android:name="ubb.license.david.monumentalv0.ui.session.setup.StartFragment"
            android:label="fragment_home_start"
            tools:layout="@layout/fragment_start" >
        <action
                android:id="@+id/actionStartSession"
                app:destination="@id/detailsDestination"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
        <action
                android:id="@+id/actionResumeSession"
                app:destination="@id/navigationDestionation"
                app:popUpTo="@+id/startDestination"
                app:popUpToInclusive="false" />
    </fragment>
    <fragment
            android:id="@+id/detailsDestination"
            android:name="ubb.license.david.monumentalv0.ui.session.setup.DetailsFragment"
            android:label="fragment_radius"
            tools:layout="@layout/fragment_details" >
        <action
                android:id="@+id/actionAdvance"
                app:destination="@id/categoriesFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
            android:id="@+id/categoriesFragment"
            android:name="ubb.license.david.monumentalv0.ui.session.setup.CategoriesFragment"
            android:label="fragment_categories"
            tools:layout="@layout/fragment_categories" >
        <argument
                android:name="radius"
                app:argType="integer"
                android:defaultValue="0" />
        <argument
                android:name="limit"
                app:argType="integer"
                android:defaultValue="0" />
        <action
                android:id="@+id/actionAdvance"
                app:destination="@id/landmarkResultsFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
                android:name="location"
                app:argType="com.google.android.gms.maps.model.LatLng" />
    </fragment>
    <fragment
            android:id="@+id/landmarkResultsFragment"
            android:name="ubb.license.david.monumentalv0.ui.session.setup.ResultFragment"
            android:label="fragment_landmark_results"
            tools:layout="@layout/fragment_results" >
        <argument
                android:name="limit"
                app:argType="integer"
                android:defaultValue="0" />
        <argument
                android:name="radius"
                app:argType="integer"
                android:defaultValue="0" />
        <argument
                android:name="categories"
                app:argType="string"
                android:defaultValue='""' />
        <argument
                android:name="location"
                app:argType="com.google.android.gms.maps.model.LatLng" />
        <action
                android:id="@+id/actionBeginSession"
                app:destination="@id/navigationDestionation"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@+id/startDestination"
                app:launchSingleTop="true" />
    </fragment>
    <fragment
            android:id="@+id/navigationDestionation"
            android:name="ubb.license.david.monumentalv0.ui.session.tracking.NavigationFragment"
            android:label="fragment_navigation"
            tools:layout="@layout/fragment_navigation" >
        <argument
                android:name="sessionId"
                app:argType="long" />
    </fragment>
</navigation>