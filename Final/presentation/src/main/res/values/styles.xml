<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.TransparentActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TransparentActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="TextInputLayoutHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_dark</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/fade_out_bottom</item>
    </style>

</resources>
